@page
@{ Layout = "../shared/_layout"; }

<el-card class="box-card">
  <div slot="header" class="clearfix">
    <span>查看资料</span>
  </div>

  <el-form v-if="administrator" label-width="150px" size="mini">
    <el-form-item label="管理员Id">
      {{ administrator.id }}
    </el-form-item>
    <el-form-item label="账号">
      {{ administrator.userName }}
    </el-form-item>
    <el-form-item label="姓名">
      {{ administrator.displayName }}
    </el-form-item>
    <el-form-item label="级别">
      {{ level }}
    </el-form-item>
    <el-form-item label="角色" v-if="isOrdinaryAdmin">
      <span v-html="roleNames"></span>
    </el-form-item>
    <el-form-item label="可管理站点" v-if="!isSuperAdmin">
      <span v-html="siteNames"></span>
    </el-form-item>
    <el-form-item label="创建时间">
      {{ administrator.creationDate }}
    </el-form-item>
    <el-form-item label="最后登录时间">
      {{ administrator.lastActivityDate }}
    </el-form-item>
    <el-form-item label="手机号码">
      {{ administrator.mobile }}
    </el-form-item>
    <el-form-item label="电子邮箱">
      {{ administrator.email }}
    </el-form-item>
  </el-form>

  <el-divider></el-divider>
  <div style="height: 10px"></div>

  <template v-if="pageType == $pageTypeAdmin">
    <el-button size="small" v-on:click="btnReturnClick">返 回</el-button>
  </template>
  <template v-else-if="returnUrl">
    <el-button size="small" v-on:click="location.href = returnUrl">返 回</el-button>
  </template>

</el-card>

@section Scripts{ <script src="/admin/assets/js/settings/administratorsView.js" type="text/javascript"></script> }