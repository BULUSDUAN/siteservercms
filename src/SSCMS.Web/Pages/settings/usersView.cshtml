@page
@{ Layout = "../shared/_layout"; }

<el-card class="box-card">
  <div slot="header" class="clearfix">
    <span>查看资料</span>
  </div>

  <el-form v-if="user" label-width="150px" size="mini">
    <el-form-item label="用户Id">
      {{ user.id }}
    </el-form-item>
    <el-form-item label="账号">
      {{ user.userName }}
    </el-form-item>
    <el-form-item label="姓名">
      {{ user.displayName }}
    </el-form-item>
    <el-form-item label="组别">
      {{ groupName }}
    </el-form-item>
    <el-form-item label="创建时间">
      {{ user.creationDate }}
    </el-form-item>
    <el-form-item label="最后登录时间">
      {{ user.lastActivityDate }}
    </el-form-item>
    <el-form-item label="手机号码">
      {{ user.mobile }}
    </el-form-item>
    <el-form-item label="电子邮箱">
      {{ user.email }}
    </el-form-item>
  </el-form>

  <el-divider></el-divider>
  <div style="height: 10px"></div>

  <el-button size="small" v-on:click="location.href = returnUrl">返 回</el-button>

</el-card>
  
@section Scripts{ <script src="/admin/assets/js/settings/usersView.js" type="text/javascript"></script> }